<div class="col-md-6 col-md-offset-3">
  <div class="edit-review-form">
    <h1><%= t('edit-rev') %></h1>

    <%= simple_form_for([@book, @review]) do |f| %>
      <div id="rating-form">
        <label><%= t('rating-value') %></label>
      </div>
      <%= f.input  :comment, label: t('review-comment') %>
      <%= f.button :submit, t('edit-rev'), :class => 'btn-custom2' %>
    <% end %>
  </div>
</div>

<script>
    $('#rating-form').raty({
        path: '/assets/',
        scoreName: 'review[rating]'
    });
</script>